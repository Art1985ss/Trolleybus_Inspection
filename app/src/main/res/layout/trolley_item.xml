<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="4dp">

        <TableLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="4dp"
            android:layout_below="@id/text_view_trolley_id">
            <TableRow
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_weight="@android:integer/config_mediumAnimTime"
                    android:text="ID:" />

                <TextView
                    android:id="@+id/text_view_trolley_id"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="#33ff33"
                    android:layout_weight="@android:integer/config_mediumAnimTime"
                    android:text="1" />
            </TableRow>

            <TableRow
                android:layout_width="match_parent"
                android:layout_height="match_parent">

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_weight="@android:integer/config_mediumAnimTime"
                    android:text="Model :" />

                <TextView
                    android:id="@+id/text_view_trolley_model"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_weight="@android:integer/config_mediumAnimTime"
                    android:text="model" />
            </TableRow>

            <TableRow
                android:layout_width="match_parent"
                android:layout_height="match_parent">

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_weight="@android:integer/config_mediumAnimTime"
                    android:text="Date : " />

                <TextView
                    android:id="@+id/text_view_date"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_weight="@android:integer/config_mediumAnimTime"
                    android:text="31.05.1985" />
            </TableRow>
        </TableLayout>


</androidx.cardview.widget.CardView>