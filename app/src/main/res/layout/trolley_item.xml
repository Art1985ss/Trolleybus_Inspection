<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="4dp">

        <TableLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="4dp"
            android:layout_below="@id/text_view_trolley_id">
            <TableRow
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_weight="@android:integer/config_shortAnimTime"
                    android:text="ID:" />

                <TextView
                    android:id="@+id/text_view_trolley_id"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="#33ff33"
                    android:layout_weight="@android:integer/config_mediumAnimTime"
                    android:text="1" />

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_weight="@android:integer/config_shortAnimTime"
                    android:text="Model:" />

                <TextView
                    android:id="@+id/text_view_trolley_model"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_weight="@android:integer/config_mediumAnimTime"
                    android:text="model" />
            </TableRow>

            <TableRow
                android:layout_width="match_parent"
                android:layout_height="match_parent">

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_weight="@android:integer/config_shortAnimTime"
                    android:text="Vilces dzinejs:" />

                <TextView
                    android:id="@+id/text_view_traction_motor_num"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_weight="@android:integer/config_mediumAnimTime"
                    android:text="123" />

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_weight="@android:integer/config_shortAnimTime"
                    android:text="Nobraukums:" />

                <TextView
                    android:id="@+id/text_view_mileage"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_weight="@android:integer/config_mediumAnimTime"
                    android:text="123" />
            </TableRow>

            <TableRow
                android:layout_width="match_parent"
                android:layout_height="match_parent">

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_weight="@android:integer/config_shortAnimTime"
                    android:text="Dizelgenerators: " />

                <TextView
                    android:id="@+id/text_view_diesel_generator_num"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_weight="@android:integer/config_mediumAnimTime"
                    android:text="1234" />

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_weight="@android:integer/config_shortAnimTime"
                    android:text="Dizeldzinejs: " />

                <TextView
                    android:id="@+id/text_view_diesel_engine_num"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_weight="@android:integer/config_mediumAnimTime"
                    android:text="1234" />
            </TableRow>

            <TableRow
                android:layout_width="match_parent"
                android:layout_height="match_parent">

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_weight="@android:integer/config_shortAnimTime"
                    android:text="AKB1:" />

                <TextView
                    android:id="@+id/text_view_akb1"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_weight="@android:integer/config_mediumAnimTime"
                    android:text="123" />

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_weight="@android:integer/config_shortAnimTime"
                    android:text="AKB2:" />

                <TextView
                    android:id="@+id/text_view_akb2"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_weight="@android:integer/config_mediumAnimTime"
                    android:text="123" />

            </TableRow>
        </TableLayout>


</androidx.cardview.widget.CardView>